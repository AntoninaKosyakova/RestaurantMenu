<Window x:Class="RestaurantMenu.FoodMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestaurantMenu"
        mc:Ignorable="d"
        Title="FoodMenu" Height="1000" Width="800"
        FontFamily = "Times New Roman"
        Background="#4B2C2C">
    <Grid>

        <TextBlock Text="FOOD MENU" FontSize="30" FontWeight="Bold" Foreground="#FFFFFF"
                   HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0"/>

        <!-- Left Section: Food Categories -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Width="400">

            <!-- Starters -->
            <TextBlock Text="Starters" FontSize="20" FontWeight="Bold" Foreground="#FFFFFF" Margin="0,50,0,10"/>
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="Name" Foreground="#FFFFFF" Width="100"/>
                <Button Content="Add" Width="50" Click="AddToOrder_Click"/>
            </StackPanel>





        </StackPanel>


    </Grid>
</Window>
