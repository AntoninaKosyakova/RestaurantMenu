<Window x:Class="RestaurantMenu.MenuPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Food Menu" Height="800" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Main Content -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="0">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Title -->
                <TextBlock Text="FOOD MENU" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center"/>

                <!-- Starters Section -->
                <StackPanel Grid.Row="1" Margin="0,20,0,0">
                    <Border BorderThickness="1" BorderBrush="Black">
                        <StackPanel Margin="10">
                            <TextBlock Text="Starters" FontSize="18" FontWeight="Bold"/>
                            <Separator/>

                            <!-- Starter 1 -->
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10">
                                <StackPanel Width="600">
                                    <TextBlock Text="{Binding Starters[0].Name}" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Starters[0].Description}" TextWrapping="Wrap" FontSize="12"/>
                                </StackPanel>
                                <TextBlock Text="{Binding Starters[0].Price, StringFormat=C}" Width="50" VerticalAlignment="Center"/>
                                <Button Content="Edit" Width="60" Margin="5,0" Click="EditStarter1_Click"/>
                                <Button Content="Delete" Width="60" Margin="5,0" Click="DeleteStarter1_Click"/>
                            </StackPanel>

                            <!-- Starter 2 -->
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10">
                                <StackPanel Width="600">
                                    <TextBlock Text="{Binding Starters[1].Name}" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Starters[1].Description}" TextWrapping="Wrap" FontSize="12"/>
                                </StackPanel>
                                <TextBlock Text="{Binding Starters[1].Price, StringFormat=C}" Width="50" VerticalAlignment="Center"/>
                                <Button Content="Edit" Width="60" Margin="5,0" Click="EditStarter2_Click"/>
                                <Button Content="Delete" Width="60" Margin="5,0" Click="DeleteStarter2_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Main Dishes Section -->
                <StackPanel Grid.Row="2" Margin="0,20,0,0">
                    <Border BorderThickness="1" BorderBrush="Black">
                        <StackPanel Margin="10">
                            <TextBlock Text="Main Dishes" FontSize="18" FontWeight="Bold"/>
                            <Separator/>

                            <!-- Main Dish 1 -->
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10">
                                <StackPanel Width="600">
                                    <TextBlock Text="{Binding MainDishes[0].Name}" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding MainDishes[0].Description}" TextWrapping="Wrap" FontSize="12"/>
                                </StackPanel>
                                <TextBlock Text="{Binding MainDishes[0].Price, StringFormat=C}" Width="50" VerticalAlignment="Center"/>
                                <Button Content="Edit" Width="60" Margin="5,0" Click="EditMain1_Click"/>
                                <Button Content="Delete" Width="60" Margin="5,0" Click="DeleteMain1_Click"/>
                            </StackPanel>

                            <!-- Main Dish 2 -->
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10">
                                <StackPanel Width="600">
                                    <TextBlock Text="{Binding MainDishes[1].Name}" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding MainDishes[1].Description}" TextWrapping="Wrap" FontSize="12"/>
                                </StackPanel>
                                <TextBlock Text="{Binding MainDishes[1].Price, StringFormat=C}" Width="50" VerticalAlignment="Center"/>
                                <Button Content="Edit" Width="60" Margin="5,0" Click="EditMain2_Click"/>
                                <Button Content="Delete" Width="60" Margin="5,0" Click="DeleteMain2_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Desserts Section -->
                <StackPanel Grid.Row="3" Margin="0,20,0,0">
                    <Border BorderThickness="1" BorderBrush="Black">
                        <StackPanel Margin="10">
                            <TextBlock Text="Desserts" FontSize="18" FontWeight="Bold"/>
                            <Separator/>

                            <!-- Dessert 1 -->
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10">
                                <StackPanel Width="600">
                                    <TextBlock Text="{Binding Desserts[0].Name}" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Desserts[0].Description}" TextWrapping="Wrap" FontSize="12"/>
                                </StackPanel>
                                <TextBlock Text="{Binding Desserts[0].Price, StringFormat=C}" Width="50" VerticalAlignment="Center"/>
                                <Button Content="Edit" Width="60" Margin="5,0" Click="EditDessert1_Click"/>
                                <Button Content="Delete" Width="60" Margin="5,0" Click="DeleteDessert1_Click"/>
                            </StackPanel>

                            <!-- Dessert 2 -->
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10">
                                <StackPanel Width="600">
                                    <TextBlock Text="{Binding Desserts[1].Name}" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Desserts[1].Description}" TextWrapping="Wrap" FontSize="12"/>
                                </StackPanel>
                                <TextBlock Text="{Binding Desserts[1].Price, StringFormat=C}" Width="50" VerticalAlignment="Center"/>
                                <Button Content="Edit" Width="60" Margin="5,0" Click="EditDessert2_Click"/>
                                <Button Content="Delete" Width="60" Margin="5,0" Click="DeleteDessert2_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- Footer Navigation -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20">
            <Button Content="Daily Sales Summary" Width="150" Margin="10" Click="DailySalesSummary_Click"/>
            <Button Content="Orders" Width="100" Margin="10" Click="Orders_Click"/>
            <Button Content="View Food Menu" Width="150" Margin="10" Click="ViewFoodMenu_Click"/>
        </StackPanel>

    </Grid>
</Window>
