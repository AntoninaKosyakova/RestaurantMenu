                            <Button Content="edit" Width="60" Margin="5,0"/>
                            <Rectangle Width="50" Height="50" Fill="Gray" Margin="10,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                <Button Content="add" HorizontalAlignment="Right" Width="50" Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Main Dishes Section -->
