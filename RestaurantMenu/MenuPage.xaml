                        <Separator/>

                        <!-- Item 1 -->
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10">
                            <StackPanel x:Name="StartersPanel" Width="600">
                                <TextBlock Text="Name" FontWeight="Bold"/>
                                <TextBlock Text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua." TextWrapping="Wrap" FontSize="12"/>
                            </StackPanel>
                            <TextBlock Text="Price" Width="50" VerticalAlignment="Center"/>
                            <Button Content="delete" Width="60" Margin="5,0"/>
                            <Button Content="edit" Width="60" Margin="5,0"/>
                            <Rectangle Width="50" Height="50" Fill="Gray" Margin="10,0,0,0"/>
                        </StackPanel>

                        <!-- Item 2 -->
